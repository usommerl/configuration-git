[pager]
	log = diff-highlight | less -r
	show = diff-highlight | less -r
	diff = diff-highlight | less -r
[alias]
	a = add
	b = branch
	bl = branch --list
	ba = branch -a
	bal = branch -a --list
	c = commit -v
	ca = commit -v --amend
	can = commit -v --amend --no-edit
	cc = clean -f -d
	co = checkout
	cp = cherry-pick
	d = diff
	ds = diff --staged
	f = flow
	fi = flow init
	ff = flow feature
	ffl = flow feature list -v
	ffs = flow feature start
	fff = flow feature finish
	ffp = flow feature publish
	fr = flow release
	frl = flow release list -v
	frs = flow release start
	frf = flow release finish --keepremote
	frp = flow release publish
	in = "!f(){ local b=$(git symbolic-ref --short HEAD); local r=${1:-origin}; git fetch $r $b; git lo ..$r/$b; }; f"
	lo = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %Cblue<%an>%Creset' --date=short
	ll = log --stat
	l = "!f() { git lo --graph $@ && exit 0; }; f"
	out = "!f() { local b=$(git symbolic-ref --short HEAD); local r=${1:-origin}; git lo $r/$b..; }; f"
	pl = pull
	ps = push
	psr = push --recurse-submodules=on-demand
	rl = reflog --date=local
	s = show
	st = status --short -b
	stl = status --long
	su = submodule
	suf = submodule foreach
	t = tag
	tl = tag --list
[color]
	ui = true
[core]
	editor = nvim
[merge]
	tool = nvim
	ff = false
	conflictstyle = diff3
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
	rebase = true
[push]
	default = simple
	followTags = true
	recurseSubmodules = check
[rebase]
	autoStash = true
	autoSquash = true
[status]
	submodulesummary = true
[user]
	name = Uwe Sommerlatt
	email = uwe.sommerlatt@gmail.com
[include]
  path = ~/.gitconfig-local
[format]
	pretty = fuller
[credential "https://dev.exelonix.com"]
	username = uwe.sommerlatt
	helper = store
[gitflow "prefix"]
	versiontag = v
[diff]
	submodule = diff
