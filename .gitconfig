[user]
	name = Uwe Sommerlatt
	email = uwe.sommerlatt@gmail.com
[color]
	ui = true
[push]
	default = simple
[init]
	templatedir = ~/.git_template
[core]
	editor = vim
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[status]
	submodulesummary = true
[alias]
	st = status --short -b
	stl = status --long
	c = commit
	a = add
	l = log --stat
	ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %Cblue<%an>%Creset' --date=short
	pl = pull
	ps = push --recurse-submodules=check
	psr = push --recurse-submodules=on-demand
	co = checkout
	b = branch
	su = submodule
	d = diff
