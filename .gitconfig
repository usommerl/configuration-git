[pager]
	log = diff-highlight | less -r
	show = diff-highlight | less -r
	diff = diff-highlight | less -r
[alias]
	a = add
	b = branch
	c = commit -v
	ca = commit -v --amend
	can = commit -v --amend --no-edit
	cc = clean -f -d
	co = checkout
	cp = cherry-pick
	d = diff
	ds = diff --staged
	f = fetch
	in = "!f(){ local b=$(git symbolic-ref --short HEAD); local r=${1:-origin}; git fetch $r $b; git lo ..$r/$b; }; f"
	lo = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %Cblue<%an>%Creset' --date=short
	ll = log --stat
	l = !git lo --graph && exit 0
	out = "!f(){ local b=$(git symbolic-ref --short HEAD); local r=${1:-origin}; git lo $r/$b..; }; f"
	pl = pull
	ps = push --recurse-submodules=check
	psr = push --recurse-submodules=on-demand
	rl = reflog --date=local
	s = show
	st = status --short -b
	stl = status --long
	su = submodule
	t = tag
	tl = tag --list
[color]
	ui = true
[core]
	editor = nvim
[merge]
	tool = nvim
	ff = false
	conflictstyle = diff3
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
	rebase = true
[push]
	default = simple
[rebase]
	autoStash = true
	autoSquash = true
[status]
	submodulesummary = true
[user]
	name = Uwe Sommerlatt
	email = uwe.sommerlatt@gmail.com
[include]
  path = ~/.gitconfig-local
[format]
	pretty = fuller
